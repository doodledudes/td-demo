[[#DESIGNER_MODE]]
<div class="ttDesigner-region-label">WIDGET - Tenancy Details</div>
[[/DESIGNER_MODE]]

<div class="container">
    <h2>Tenancy Details</h2>
    <div class="card">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Lease Commencement date</label>
                    <input type="date" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Lease term</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Bond</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Holding Fee (if applicable)</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Holding Period</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label>Rent</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Period</label>
                    <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1"> Weeks
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2"> Fortnights
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3"> Months
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions" id="inlineRadio4" value="option4"> Years
                    </label>
                </div>
                <div class="form-group">
                    <label>Per</label>
                    <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions2" id="inlineRadio-2-1" value="option1"> Weeks
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions2" id="inlineRadio-2-2" value="option2"> Fortnights
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions2" id="inlineRadio-2-3" value="option3"> Months
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>